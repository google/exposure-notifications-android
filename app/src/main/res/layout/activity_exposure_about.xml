<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent" >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize">

      <ImageButton
        android:id="@android:id/home"
        style="?attr/borderlessButtonStyle"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="?attr/homeAsUpIndicator" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:isScrollContainer="false"
      android:fillViewport="true">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:paddingHorizontal="@dimen/padding_large"
          android:gravity="center"
          android:text="@string/exposure_about_title"
          android:textAppearance="?attr/textAppearanceHeadline5"
          android:layout_marginBottom="@dimen/padding_large" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
              android:layout_width="@dimen/settings_icon_field_width"
              android:layout_height="@dimen/settings_icon_height"
              android:layout_gravity="center_vertical"
              app:srcCompat="@drawable/ic_exposure_notification" />

            <com.google.android.material.switchmaterial.SwitchMaterial
              android:id="@+id/exposure_notification_toggle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/padding_normal"
              android:paddingVertical="@dimen/padding_normal"
              android:textAppearance="?attr/textAppearanceHeadline6"
              android:text="@string/exposure_about_toggle" />

          </LinearLayout>

          <ViewSwitcher
            android:id="@+id/exposure_about_errors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/padding_small"
              android:orientation="horizontal">

              <ImageView
                android:layout_width="@dimen/settings_icon_field_width"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_error_outline" />

              <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_extra_large"
                android:orientation="vertical">

                <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingBottom="@dimen/padding_small"
                  android:text="@string/exposure_notifications_currently_inactive"
                  android:textStyle="bold"
                  android:textAppearance="?attr/textAppearanceBody2"
                  android:textColor="?attr/colorControlNormal" />

                <TextView
                  android:id="@+id/error_loc_ble_text"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/location_ble_off_warning"
                  android:textAppearance="?attr/textAppearanceBody2"
                  android:textColor="?attr/colorControlNormal" />

                <Button
                  android:id="@+id/exposure_about_device_settings"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingHorizontal="0dp"
                  android:text="@string/device_settings"
                  style="@style/Widget.MaterialComponents.Button.TextButton" />

              </LinearLayout>

            </LinearLayout>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/padding_small"
              android:orientation="horizontal">

              <ImageView
                android:layout_width="@dimen/settings_icon_field_width"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_error_outline" />

              <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_extra_large"
                android:orientation="vertical">

                <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingBottom="@dimen/padding_small"
                  android:text="@string/exposure_notifications_currently_inactive"
                  android:textStyle="bold"
                  android:textAppearance="?attr/textAppearanceBody2"
                  android:textColor="?attr/colorControlNormal" />

                <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/storage_low_warning"
                  android:textAppearance="?attr/textAppearanceBody2"
                  android:textColor="?attr/colorControlNormal" />

                <Button
                  android:id="@+id/exposure_about_manage_storage"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingHorizontal="0dp"
                  android:text="@string/manage_storage"
                  style="@style/Widget.MaterialComponents.Button.TextButton" />

              </LinearLayout>

            </LinearLayout>
            
          </ViewSwitcher>

          <LinearLayout
            android:id="@+id/exposure_about_error_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_normal"
            android:layout_marginHorizontal="@dimen/padding_normal"
            android:orientation="vertical"
            android:visibility="gone">

            <include layout="@layout/horizontal_divider"/>

          </LinearLayout>

          <LinearLayout
            android:id="@+id/exposure_about_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
              android:id="@+id/exposure_about_detail"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/settings_icon_field_width"
              android:layout_marginEnd="@dimen/padding_extra_large"
              android:textAppearance="?attr/textAppearanceBody2"
              android:textColor="?attr/colorControlNormal" />

            <Button
              android:id="@+id/exposure_about_settings_button"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/settings_icon_field_width"
              android:paddingHorizontal="0dp"
              android:text="@string/learn_more"
              style="@style/Widget.MaterialComponents.Button.TextButton" />

          </LinearLayout>

        </LinearLayout>

      </LinearLayout>

    </androidx.core.widget.NestedScrollView>

  </LinearLayout>

  <TextView
    android:textStyle="bold"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:rotation="45"
    android:text="@string/reference_only"
    android:textColor="@color/watermark_color"
    android:importantForAccessibility="no"
    app:autoSizeMaxTextSize="50dp"
    app:autoSizeTextType="uniform" />

</FrameLayout>
