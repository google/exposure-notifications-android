<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/padding_normal"
  android:background="@drawable/semantic_banner_background"
  android:orientation="vertical">

  <ImageView
    android:layout_width="@dimen/active_app_screen_card_icon_size"
    android:layout_height="@dimen/active_app_screen_card_icon_size"
    android:layout_marginStart="@dimen/padding_micro"
    android:layout_gravity="start"
    android:contentDescription="@null"
    android:importantForAccessibility="no"
    app:srcCompat="@drawable/ic_info"
    app:tint="@color/semantic_banner_tint_color" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding_micro"
    android:layout_gravity="start"
    android:layout_marginTop="@dimen/padding_medium"
    android:text="@string/notifications_are_disabled_warning_title"
    android:textAppearance="?attr/textAppearanceSubtitle1" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding_micro"
    android:layout_gravity="start"
    android:layout_marginTop="@dimen/padding_medium"
    android:text="@string/notifications_are_disabled_warning_body"
    android:textAppearance="?attr/textAppearanceBody2" />

  <Button
    android:id="@+id/allow_notifications_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_marginTop="@dimen/padding_medium"
    android:text="@string/btn_allow_notifications"
    android:textColor="@color/semantic_banner_tint_color"
    android:layout_gravity="end"
    android:textAllCaps="false"
    style="@style/Widget.ExposureNotifications.Button.TextButton" />

</LinearLayout>